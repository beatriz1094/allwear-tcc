generator client {
  provider = "prisma-client-js"

  
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id    Int    @id @default(autoincrement())
  nome  String @db.VarChar(100)
  senha String @unique @db.VarChar(100)
  email String @unique @db.VarChar(100)
  telefone String @db.VarChar(100)
}

model Escolha {
  id    Int    @id @default(autoincrement())
  casacos  String @db.VarChar(100)
  blusas String @db.VarChar(100)
  shorts String @db.VarChar(100)
  saias String @db.VarChar(100)
  sapatos String @db.VarChar(100)
}

model Combinacao {
  id         Int       @id @default(autoincrement())
  roupas     String    @db.VarChar(100)
  estacao    String    @db.VarChar(100)
  descricao  String    @db.VarChar(255)
}